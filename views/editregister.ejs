<%- include("./partials/header") %>

<div class="container">
    <h1 class="text-center display-5">Edit Details</h1>

    <form action="/<%= user._id %>?_method=PUT" method="POST" class="mx-0 my-2">
        <div class="form-group">
            <input class="form-control" type="text" name="edit[username]" value="<%= user.username %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="edit[firstName]" value="<%= user.firstName %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="edit[lastName]" value="<%= user.lastName %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="email" name="edit[email]" value="<%= user.email %>">
        </div>
        <div class="form-group">
            <button class="btn btn-success form-control">Submit</button>
        </div>
        
    </form>
</div>

<%- include("./partials/footer") %>