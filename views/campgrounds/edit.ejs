<%- include("../partials/header") %>
        
<div class="container text-center" >
    <h1 class="mb-3"> Edit <strong><%= campground.name %></strong></h1>

    <div style="display: inline">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">    
                <input class="form-control" type="text" name="camp[name]" placeholder="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="camp[image]" placeholder="image" value="<%= campground.image %>">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="inputGroupSelect01">Options</label>
                </div>
                <select class="custom-select" name="camp[category]" id="inputGroupSelect01">
                  <option selected>Choose...</option>
                  <option value="1">Trek</option>
                  <option value="2">Non-Trek</option>
                </select>
              </div>
            <div class="form-group">
                <input class="form-control" type="number" name="camp[cost]" placeholder="cost" value="<%= campground.cost %>" min="0" step="1">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Enter new Password">
            </div>
            <div class="form-group">
                <textarea rows="10" class="form-control" name="camp[description]" placeholder="description">
                    <%= campground.description %>
                </textarea>

            </div>     
            <div class="form-group">
                <button class="btn btn-lg btn-primary"> Submit</button>
            </div>       
        </form>
        <a href="/campgrounds">Back</a>
    </div>       

</div>

<%- include("../partials/footer") %>