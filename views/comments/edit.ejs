<%- include("../partials/header") %>
        
<div class="container text-center" >
    <h1 class="mb-3"> Edit comment by <strong><%= comment.author.username %></strong></h1>

    <div style="display: inline">
        <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea rows="10" class="form-control" name="comment[text]" placeholder="Add comment">
                    <%= comment.text %>
                </textarea>
            </div>     
            <div class="form-group">
                <button class="btn btn-lg btn-primary"> Submit</button>
            </div>       
        </form>
        <a href="/campgrounds">Back</a>
    </div>       

</div>

<%- include("../partials/footer") %>